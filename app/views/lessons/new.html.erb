<h1>New Lesson</h1>
<% if @lesson.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
  <% @lesson.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>
<% end %>

<form action="/lessons" method="post">
  <label for="lesson_name">Name</label>
  <input id="lesson_name" name="lesson[name]" type="text" value="<%= @lesson.name %>">
  <div>
    <label for="lesson_text">Text</label>
    <textarea id="lesson_text" name="lesson[text]" type="text" value="<%= @lesson.text %>" rows="10" cols="50"></textarea>
  </div>
  <label for="lesson_number">Lesson number</label>
  <input id="lesson_number" name="lesson[number]" type="integer" value="<%= @lesson.number %>">
  <label>Section</label>
  <select name="section_id">
    <% Section.all.each do |section| %>
      <option value="<%= section.id %>"><%= section.name %></option>
    <% end %>
</select>
  <button type="submit">Create Lesson</button>
</form>
