<h1>#<%= @lesson.number %> <%= @lesson.name %></h1>

<p><%= @lesson.text %></p>

<p><a href="/lessons/<%= @lesson.id %>/edit">Edit</a></p>
<p><a href="/lessons/<%= @lesson.id %>"
      data-confirm="You sure?"
      data-method="delete"
      rel="nofollow">Delete</a></p>
<p><a href="/lessons">Return to main page</a></p>
<% if @lesson.next %>
  <p><a href="/lessons/<%= @lesson.next.id %>">Next</a></p>
<% end %>
<% if @lesson.previous %>
  <p><a href="/lessons/<%= @lesson.previous.id %>">Previous</a></p>
<% end %>
